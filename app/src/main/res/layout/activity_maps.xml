<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.matthew.ceftrails.MapsActivity">
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map"
    tools:context="com.matthew.ceftrails.MapsActivity"
    android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECORD NEW ROUTE"
        android:id="@+id/recordButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="buttonPress" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY SAVED ROUTES"
        android:id="@+id/routesButton"
        android:onClick="goToRoutes"
        android:layout_alignTop="@+id/map"
        android:layout_alignRight="@+id/recordButton"
        android:layout_alignEnd="@+id/recordButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REPORT AN ISSUE"
        android:id="@+id/cameraButton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/routesButton"
        android:layout_toEndOf="@+id/routesButton"
        android:onClick="goToCamera" />
</RelativeLayout>